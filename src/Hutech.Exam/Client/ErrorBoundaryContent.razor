@inject IJSRuntime js

<MudPaper Class="error-overlay">
    <MudGrid Justify="Justify.Center" AlignItems="AlignItems.Center" Class="error-content" Style="min-height: 100vh;">
        <MudItem xs="12" sm="8" md="6" lg="4">
            <MudCard>
                <MudCardHeader Class="bg-danger text-white">
                    <MudText Typo="Typo.h5" Class="m-0">Unexpected Error</MudText>
                </MudCardHeader>

                <MudCardContent>
                    <MudText>Oops, có lỗi không mong muốn xảy ra</MudText>
                    <MudPaper>
                        <pre class="p-3" style="--bs-bg-opacity: 0.25; background-color: aliceblue">Hệ thống có lỗi phát sinh. Vui lòng chờ trong giây lát</pre>
                    </MudPaper>
                </MudCardContent>

                <MudCardActions Class="d-flex">
                    <MudSpacer />
                    <MudButton Color="Color.Success" Variant="Variant.Filled" OnClick="@OnHandle">OK</MudButton>
                </MudCardActions>
            </MudCard>
        </MudItem>
    </MudGrid>
</MudPaper>
<style type="text/css">
    .error-overlay{
        position: fixed;
        left: 0; 
        right: 0; 
        top: 0; 
        bottom: 0;
        background: black;
        opacity: 0.95;
        z-index: 5000;
    }
    .error-content{
        position: fixed;
        left: 0;
        right: 0;
        top: 0;
        bottom: 0;
        background: transparent;
        z-index: 5001;
    }
</style>

@code {
    [Parameter, EditorRequired]
    public Exception Error { get; set; } = new();
    [Parameter, EditorRequired]
    public EventCallback OnHandle { get; set; } 
}
