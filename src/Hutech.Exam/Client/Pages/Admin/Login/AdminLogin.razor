@page "/admin"
@inject ISnackbar Snackbar

<PageTitle>Admin Login</PageTitle>

<MudContainer MaxWidth="MaxWidth.Small" Class="d-flex justify-center align-center" Style="height: 100vh;">
    <MudCard Class="pa-6" Style="background-color: #eaeaea" Elevation="21">
        <!-- Logo -->
        <MudCardContent Class="d-flex justify-center">
            <MudImage Src="images/exam/Logo.svg" Width="200" />
        </MudCardContent>
        <!-- Form đăng nhập -->
        <MudCardContent>
            <MudGrid Spacing="2">
                <MudItem xs="12">
                    <MudTextField T="string" Label="Nhập username" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.AccountCircle" Style="background-color: #eaeaea" InputType="InputType.Text"
                                  @bind-Value="username" Required="true" RequiredError="Vui lòng nhập tên tài khoản!" />
                </MudItem>
                <MudItem xs="12">
                    <MudTextField T="string" Label="Nhập password" Variant="Variant.Outlined" Adornment="Adornment.Start" AdornmentIcon="@Icons.Material.Filled.VpnKey" Style="background-color: #eaeaea" InputType="InputType.Password"
                                  @bind-Value="password" @onkeyup="Enter" Required="true" RequiredError="Vui lòng nhập mật khẩu!" />
                </MudItem>
                <MudItem xs="12" Class="d-flex justify-center">
                    <MudButton Variant="Variant.Filled" Style="background-color: rgb(0,107,179); color: white" OnClick="OnClickDangNhap">Đăng nhập</MudButton>
                </MudItem>
            </MudGrid>
        </MudCardContent>
    </MudCard>
</MudContainer>
